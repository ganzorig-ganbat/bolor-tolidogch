{
  "name": "Bolor Toli-догч Extension",
  "version": "1.0.1",
  "description": "Bolor toli-догч extension by SWGANZO. Unofficial Bolor toli extension.",
  "manifest_version": 3,
  "action": {
    "default_title": "Bolor Toli-догч Extension",
    "default_icon": "images/icon.png",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": ["contextMenus", "tabs", "storage"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'self' 'unsafe-inline' https://code.jquery.com https://malsup.github.io;"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/selection.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
